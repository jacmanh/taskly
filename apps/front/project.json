{
  "name": "front",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/front",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/front"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/front"
        },
        "production": {
          "outputPath": "dist/apps/front"
        }
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "front:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "front:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "front:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "front:build:production"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/front/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/front"],
      "options": {
        "jestConfig": "apps/front/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "eslint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint apps/front --ext .ts,.tsx,.js,.jsx"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test",
        "cwd": "apps/front"
      }
    },
    "e2e:ui": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --ui",
        "cwd": "apps/front"
      }
    }
  }
}
