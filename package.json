{
  "name": "taskly",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nx run-many --target=serve --projects=front,api --parallel",
    "dev:front": "nx serve front",
    "dev:api": "nx serve api",
    "build": "nx run-many --target=build --projects=front,api --parallel",
    "build:front": "nx build front",
    "build:api": "nx build api",
    "start:front": "nx start front",
    "start:api": "nx serve api --configuration=production",
    "lint": "nx run-many --target=lint --all",
    "lint:front": "nx lint front",
    "lint:api": "nx lint api",
    "lint:ts": "tsc -p tsconfig.base.json --noEmit",
    "typecheck": "nx run-many --target=typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f postgres",
    "docker:restart": "docker compose restart postgres",
    "prisma:generate": "cd apps/api && prisma generate",
    "prisma:migrate": "cd apps/api && prisma migrate dev",
    "prisma:studio": "cd apps/api && prisma studio",
    "prisma:push": "cd apps/api && prisma db push",
    "prisma:seed": "cd apps/api && prisma db seed",
    "test": "nx run-many --target=test --all --parallel",
    "test:watch": "nx run front:test --watch",
    "e2e:setup": "pnpm prisma:seed && playwright install chromium --with-deps",
    "e2e": "pnpm e2e:setup && playwright test -c apps/front/tests/playwright.config.ts",
    "e2e:headed": "pnpm e2e:setup && playwright test -c apps/front/tests/playwright.config.ts --headed",
    "e2e:ui": "playwright test -c apps/front/tests/playwright.config.ts --ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
